<?php
/** @var \Zend\View\Model\ViewModel $viewModel */
$viewModel = $this->viewModel()->getCurrent();
$buttonViews = $viewModel->getChildrenByCaptureTo('button');
$class = $viewModel->getVariable('class');
?>
<td>
    <div class="btn-group-vertical btn-group-solid rounded <?=$class?>">
        <?php foreach ($buttonViews as $view) echo $this->render($view); ?>
    </div>
</td>